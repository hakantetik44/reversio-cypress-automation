{
  "name": "reversio-cypress-automation",
  "version": "1.0.0",
  "description": "Tests d'automatisation Cypress pour Revers.io avec rapports Mochawesome et Allure",
  "main": "index.js",
  "scripts": {
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "cypress:run:chrome": "cypress run --browser chrome",
    "cypress:run:firefox": "cypress run --browser firefox",
    "cypress:run:edge": "cypress run --browser edge",
    "test": "cypress run",
    "test:headed": "cypress run --headed",
    "test:chrome": "cypress run --browser chrome",
    "test:firefox": "cypress run --browser firefox",
    "test:edge": "cypress run --browser edge",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:serve": "allure serve allure-results",
    "test:allure": "cypress run --env allure=true",
    "report:merge": "mochawesome-merge mochawesome-report/*.json > mochawesome-report/merged.json",
    "report:generate": "marge mochawesome-report/merged.json -o mochawesome-report --reportTitle 'Tests Revers.io' --reportPageTitle 'Rapport de Tests Cypress'",
    "report:mochawesome": "npm run report:merge && npm run report:generate",
    "clean": "rm -rf allure-results allure-report mochawesome-report cypress/screenshots cypress/videos"
  },
  "keywords": [
    "cypress",
    "testing",
    "e2e",
    "automation",
    "revers.io"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@shelex/cypress-allure-plugin": "^2.41.2",
    "allure-commandline": "^2.34.1",
    "cypress": "^15.5.0",
    "cypress-multi-reporters": "^1.6.4",
    "cypress-xpath": "^2.0.1",
    "mochawesome": "^2.0.5",
    "mochawesome-merge": "^5.0.0",
    "mochawesome-report-generator": "^1.1.0"
  }
}
